{
  "$schema": "https://deno.land/x/deno@v2.1.5/cli/schemas/config-file.v1.json",
  "name": "@xpr/jsocket",
  "version": "0.13.0",
  "license": "MIT",
  "description": "A simple unix socket server/client utilities",
  "exports": {
    ".": "./mod.ts",
    "./read": "./read.ts",
    "./write": "./write.ts",
    "./server": "./server.ts",
    "./client": "./client.ts"
  },
  "tasks": {
    "test": "deno test",
    "build-npm": "tsc && vite build"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "@types/node": "npm:@types/node@^22.10.5"
  },
  "publish": {
    "include": [
      "LICENSE",
      "readme.md",
      "mod.ts",
      "client.ts",
      "read.ts",
      "server.ts",
      "write.ts",
      "utils.ts",
      "vendor/**"
    ],
    "exclude": [
      "deno.lock"
    ]
  }
}
