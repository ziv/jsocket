{
  "$schema": "https://deno.land/x/deno@v2.1.5/cli/schemas/config-file.v1.json",
  "name": "@xpr/jsocket",
  "version": "0.20.0",
  "license": "MIT",
  "description": "A simple unix socket server/client utilities",
  "exports": {
    ".": "./mod.ts",
    "./read": "./read.ts",
    "./write": "./write.ts",
    "./server": "./server.ts",
    "./client": "./client.ts"
  },
  "tasks": {
    "test": "deno test",
    "build-npm": "./create-npm-package.sh"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "@std/bytes": "jsr:@std/bytes@^1.0.4",
    "@std/msgpack": "jsr:@std/msgpack@^1.0.2",
    "@std/testing": "jsr:@std/testing@^1.0.9"
  },
  "publish": {
    "include": [
      "LICENSE",
      "readme.md",
      "mod.ts",
      "client.ts",
      "read.ts",
      "server.ts",
      "write.ts",
      "utils.ts"
    ],
    "exclude": [
      "deno.lock"
    ]
  }
}
