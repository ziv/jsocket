{
  "name": "@xpr/jsocket",
  "version": "0.22.0",
  "description": "A simple unix socket server/client utilities",
  "main": "index.js",
  "author": "Ziv Perry",
  "license": "MIT",
  "private": false,
  "keywords": [
    "unix",
    "socket",
    "server",
    "client"
  ],
  "exports": {
    ".": "./index.js",
    "./read": "./read.js",
    "./write": "./write.js",
    "./server": "./server.js",
    "./client": "./client.js"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.json",
    "postbuild": "cp package*.json dist/ && cp ../LICENSE dist/ && cp ../readme.md dist/",
    "promote": "cd dist && npm publish --access public"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@std/bytes": "npm:@jsr/std__bytes@^1.0.4",
    "@std/msgpack": "npm:@jsr/std__msgpack@^1.0.2"
  }
}
