{
  "name": "@xpr/jsocket",
  "version": "0.0.0",
  "description": "A simple unix socket server/client utilities",
  "main": "index.js",
  "author": "Ziv Perry",
  "license": "MIT",
  "private": false,
  "keywords": [
    "unix",
    "socket",
    "server",
    "client"
  ],
  "exports": {
    ".": "./index.js",
    "./read": "./read.js",
    "./write": "./write.js",
    "./server": "./server.js",
    "./client": "./client.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ziv/jsocket.git",
    "directory": "npm"
  },
  "homepage": "https://github.com/ziv/jsocket",
  "scripts": {
    "test": "tsx --test *_test.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc -p tsconfig.lib.json",
    "postbuild": "cp package*.json dist/ && cp ../LICENSE dist/ && cp ../readme.md dist/"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.10.6",
    "semantic-release": "^24.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist",
          "npmPublish": true
        }
      ],
      "@semantic-release/github"
    ]
  }
}
