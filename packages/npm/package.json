{
  "name": "@xpr/jsocket",
  "version": "0.0.0",
  "description": "A simple unix socket server/client utilities",
  "main": "index.js",
  "scripts": {
    "test": "node --test *_test.js",
    "build": "tsc -p tsconfig.json"
  },
  "author": "Ziv Perry",
  "license": "MIT",
  "keywords": [
    "unix",
    "socket",
    "server",
    "client"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "exports": {
    ".": "./index.js",
    "./read": "./read.js",
    "./write": "./write.js",
    "./server": "./server.js",
    "./client": "./client.js"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.10.6",
    "semantic-release": "^24.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "files": [
    "readme.md",
    "license",
    "*.js",
    "*.d.ts"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true
        }
      ],
      "@semantic-release/github"
    ]
  }
}
